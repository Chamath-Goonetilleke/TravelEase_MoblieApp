<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <stroke
                android:width="2dp"
                android:color="#CCCCCC" /> <!-- Border color -->
        </shape>
    </item>
    <!-- Shadow -->
    <item android:right="2dp" android:left="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="4dp" /> <!-- Adjust the radius as needed -->
            <padding android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="0dp" />
        </shape>
    </item>
</layer-list>